<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2CBEC"
    tools:context=".activity_alimentacion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.058"
                app:srcCompat="@drawable/dieta" />

            <ImageButton
                android:id="@+id/btnsalirdealimen"
                android:layout_width="54dp"
                android:layout_height="64dp"
                android:background="#D2CBEC"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.017"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.016"
                app:srcCompat="@drawable/back" />

            <LinearLayout
                android:layout_width="434dp"
                android:layout_height="530dp"
                android:gravity="center|center_vertical|fill_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.935">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend"
                    android:text="Horario de Alimentacion"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btnmenudesayuno"
                    android:layout_width="331dp"
                    android:layout_height="97dp"
                    android:drawableRight="@drawable/desayuno"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Menú de desayunos"
                    app:cornerRadius="35dp" />

                <Button
                    android:id="@+id/btnrefrigeriomanana"
                    android:layout_width="331dp"
                    android:layout_height="97dp"
                    android:drawableRight="@drawable/tetera"
                    android:text="Recomendaciones de refrigerio"
                    app:cornerRadius="35dp" />

                <Button
                    android:id="@+id/btnmenualmuerzo"
                    android:layout_width="331dp"
                    android:layout_height="97dp"
                    android:drawableRight="@drawable/almuerzo"
                    android:text="Menù Almuerzo"
                    app:cornerRadius="35dp" />

                <Button
                    android:id="@+id/btnrefrigeriotarde"
                    android:layout_width="331dp"
                    android:layout_height="97dp"
                    android:drawableRight="@drawable/tetera"
                    android:text="Recomendaciones de Refrigerio"
                    app:cornerRadius="35dp" />

                <Button
                    android:id="@+id/btncenas"
                    android:layout_width="331dp"
                    android:layout_height="97dp"
                    android:drawableRight="@drawable/cenas"
                    android:text="Recomendaciones de Cenas"
                    app:cornerRadius="35dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Scrollbotton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="995dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="25dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>